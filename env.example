# PostgreSQL Database Configuration
# Copy this file to .env and update with your PostgreSQL credentials

# Database Name
DB_NAME=endemic_trees

# Database User
DB_USER=postgres

# Database Password
DB_PASSWORD=postgres

# Database Host (use 'localhost' for local development)
DB_HOST=localhost

# Database Port (default PostgreSQL port is 5432)
DB_PORT=5432

# Database Connection Settings (optional)
# DB_CONN_MAX_AGE=600  # Connection max age in seconds (default: 600 = 10 minutes)
# DB_USE_POOLING=False  # Set to True if using external connection pooler like PgBouncer

# Optional: Use PostgreSQL for tests (set to 'true' to enable, default uses SQLite for speed)
# USE_POSTGRES_TESTS=false

# Django Production Settings
# DEBUG=False
# SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Gunicorn Settings (optional)
# GUNICORN_PORT=8000
# GUNICORN_WORKERS=3
# GUNICORN_LOG_LEVEL=info

